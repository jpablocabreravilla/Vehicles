<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:i18n="clr-namespace:Vehicles.Helpers"
             x:Class="Vehicles.Views.AddVehiclePage"
			 BindingContext="{Binding Main, Source={StaticResource Locator}}"
			 Title="{i18n:Translate AddVehicle}">
	<ContentPage.Content>
		<ScrollView
			BindingContext="{Binding AddVehicle}">
			<StackLayout
			Padding="5">
				<Image
					Source="NoVehicleCar.png">
				</Image>
				<Label
					FontSize="Small"
					HorizontalOptions="Center"
					Text="{i18n:Translate ChangeImage}">
				</Label>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="1.5*"/>
					</Grid.RowDefinitions>
					<Label 
						Grid.Column="0"
						Grid.Row="0"
						Text="{i18n:Translate Brand}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="0"
						Text="{Binding Brand}"
						Placeholder="{i18n:Translate BrandPlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="1"
						Text="{i18n:Translate Type}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="1"
						Text="{Binding Type}"
						Placeholder="{i18n:Translate TypePlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="2"
						Text="{i18n:Translate Owner}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="2"
						Text="{Binding Owner}"
						Placeholder="{i18n:Translate OwnerPlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="3"
						Text="{i18n:Translate Model}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="3"
						Keyboard="Numeric"
						Text="{Binding Model}"
						Placeholder="{i18n:Translate ModelPlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="4"
						Text="{i18n:Translate Mileage}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="4"
						Keyboard="Numeric"
						Text="{Binding Mileage}"
						Placeholder="{i18n:Translate MileagePlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="5"
						Text="{i18n:Translate Price}"
						VerticalOptions="Center">
					</Label>
					<Entry
						Grid.Column="1"
						Grid.Row="5"
						Keyboard="Numeric"
						Text="{Binding Price}"
						Placeholder="{i18n:Translate PricePlaceholder}">
					</Entry>
					<Label 
						Grid.Column="0"
						Grid.Row="6"
						Text="{i18n:Translate Specifications}"
						VerticalOptions="Center">
					</Label>
					<Editor
						Grid.Column="1"
						Grid.Row="6"
						Text="{Binding Specifications}"
						VerticalOptions="FillAndExpand">
					</Editor>
				</Grid>
				
				<ActivityIndicator
					IsRunning="{Binding IsRunning}"
					VerticalOptions="CenterAndExpand">
				</ActivityIndicator>

				<Button
					BackgroundColor="Navy"
					BorderRadius="23"
					Command="{Binding SaveCommand}"
					HeightRequest="46"
					IsEnabled="{Binding IsEnabled}"
					Text="{i18n:Translate Save}"
					TextColor="White">
				</Button>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>